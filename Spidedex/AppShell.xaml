<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Spidedex.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Spidedex"
    xmlns:dashboardPage="clr-namespace:Spidedex.View"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        FlyoutItem.IsVisible="False"/>

    <FlyoutItem Title="Dashboard" FlyoutDisplayOptions="AsMultipleItems">
        
        <ShellContent
        Icon="clipboard.svg"
        Title="Fact Sheets"
        ContentTemplate="{DataTemplate dashboardPage:DashboardPage}"
        Route="DashboardPage">
        </ShellContent>
        
        <ShellContent
        Icon="spider_web.png"
        Title="My Spiders"
        ContentTemplate="{DataTemplate dashboardPage:DashboardPage}"
        Route="DashboardPage">
        </ShellContent>

        <ShellContent
        Icon="globe.svg"
        Title="Resources"
        ContentTemplate="{DataTemplate dashboardPage:DashboardPage}"
        Route="DashboardPage">
        </ShellContent>

        <ShellContent
        Icon="settings.svg"
        Title="Settings"
        ContentTemplate="{DataTemplate dashboardPage:DashboardPage}"
        Route="DashboardPage">
        </ShellContent>

    </FlyoutItem>
</Shell>
