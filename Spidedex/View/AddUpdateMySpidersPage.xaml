<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spidedex.View.AddUpdateMySpidersPage"
             Title="Add or Update a Spider">
    <ContentPage.Resources>
        <Style TargetType="Label" x:Key="SectionLabelStyle">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="#AD7BFF" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style TargetType="Entry" x:Key="EntryStyle">
            <Setter Property="BackgroundColor" Value="#F2F2F2" />
            <Setter Property="TextColor" Value="#333333" />
            <Setter Property="PlaceholderColor" Value="#999999" />
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="Keyboard" Value="Text"/>
        </Style>
    </ContentPage.Resources>

    <StackLayout Margin="20">
        <VerticalStackLayout>
            <Label Text="Name" Style="{StaticResource SectionLabelStyle}" />
            <Entry Text="{Binding Name}" Placeholder="Enter Name" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Date Obtained" Style="{StaticResource SectionLabelStyle}" />
            <DatePicker Date="{Binding DateObtained}" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Species" Style="{StaticResource SectionLabelStyle}" />
            <Entry Text="{Binding Species}" Placeholder="Enter Species" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Enter Description" Style="{StaticResource SectionLabelStyle}" />
            <Editor Text="{Binding Description}" Placeholder="Description" Keyboard="Text" HeightRequest="100"
            AutoSize="TextChanges" TextColor="#333333" PlaceholderColor="#999999" BackgroundColor="#f2f2f2"/>
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Size (Diagonal Leg Span)" Style="{StaticResource SectionLabelStyle}" />
            <Entry Text="{Binding Size}" Placeholder="Enter Size" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Food of Choice" Style="{StaticResource SectionLabelStyle}" />
            <Entry Text="{Binding Food}" Placeholder="Enter Food" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Temperament" Style="{StaticResource SectionLabelStyle}" />
            <Entry Text="{Binding Temperament}" Placeholder="Enter Temperament" Style="{StaticResource EntryStyle}" />
        </VerticalStackLayout>

        <Button Text="Save Spider" Margin="0, 10" Command="{Binding AddUpdateMySpiderCommand}"></Button>

    </StackLayout>

</ContentPage>